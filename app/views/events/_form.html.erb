<section class="container d-flex flex-column justify-content-around align-items-center p-2">
<div class="form-div p-5 d-flex flex-column justify-content-around align-items-center text-center rounded">

  <%= form_with(model: event) do |form| %>
    <% if event.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
          <% event.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
      <h1>New event</h1>
      
      <div>
        <%= form.text_field :title, placeholder: "Title", class: "text-center m-3" %>
      </div>

      <div>
        <%= form.text_area :description, placeholder: "Description", class: "text-center m-3" %>
      </div>
      
      <div>
        <%= form.label :date_event, style: "display: block" %>
        <%= form.date_field :date_event, class: "text-center m-1 mb-3" %>
      </div>

      <div>
        <%= form.label :duration_time, style: "display: block" %>
        <%= form.time_field :duration_time, class: "m-1"  %>
      </div>

      <div>
        <%= form.label :place, style: "display: block" %>
        <%= form.text_field :place %>
      </div>

      <div>
        <%= form.label :min_number_of_joiners, style: "display: block" %>
        <%= form.text_field :min_number_of_joiners %>
      </div>

      <div>
        <%= form.label :max_number_of_joiners, style: "display: block" %>
        <%= form.text_field :max_number_of_joiners %>
      </div>

      <div>
        <%= form.label :price, style: "display: block" %>
        <%= form.text_field :price %>
      </div>

      <div>
        <%= form.label :min_age, style: "display: block" %>
        <%= form.number_field :min_age %>
      </div>

      <div>
        <%= form.submit %>
      </div>
    </div>
  </section>
<% end %>














