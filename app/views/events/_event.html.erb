<section class="container d-flex flex-column justify-content-around align-items-center p-2">

  <div id="<%= dom_id event %>" class="bg-warning p-5 d-flex flex-column justify-content-around align-items-center text-center rounded">
    <p>
      <strong class="txt">Title:</strong>
      <br>
      <%= event.title %>
    </p>
    <p>
      <strong class="txt">Description:</strong>
      <br>
      <%= event.description %>
    </p>
    <p>
      <strong class="txt">Date event:</strong>
      <br>
      <%= event.date_event %>
    </p>
    <p>
      <strong class="txt">Duration time:</strong>
      <br>
      <%= event.duration_time %>
    </p>
    <p>
      <strong class="txt">Place:</strong>
      <br>
      <%= event.place %>
    </p>
    <p>
      <strong class="txt">Price:</strong>
      <br>
      <%= event.price %>â‚¬
    </p>
    <p>
      <strong class="txt">Min age:</strong>
      <br>
      <%= event.min_age %>
    </p>

      <p>
        <% if !event.completed? %>
          <br>
          <strong class="txt"><%= event.places_left %> Places left</strong>
        <% else %>
          <strong class="txt">Subscriptions out!</strong>
        <% end %>
      </p>

    <% if current_user.id != event.organizer_id %>

      <% if !current_user.inscripted?(event) && !event.completed? %>
        <%= button_to "Subscribe", event_inscriptions_url(event), class: "btn bg-logo text-white" %>
      <% else %>
        <%= button_to "Unsubscribe", event_inscription_path(event, current_user.inscription_by_event(event)), method: :delete, class: "btn bg-logo text-white" %>
      <% end %>
    <% end %>
  </div>
  
</section>