<%= render @event %>

<div class="div-edit-event">
  <div class="m-3">
  <% if current_user.id == @event.organizer_id  || current_user.admin? %>
    <%= link_to "Edit this event", edit_event_path(@event), class: "link" %> |
  <% end %>
    <%= link_to "Back to events", "/", class: "link" %>
  </div>
  <% if current_user.id == @event.organizer_id || current_user.admin? %>
    <%= button_to "Delete this event", @event, method: :delete, class: "btn btn-danger text-white mb-5" %>
  <% end %>
</div>
