<div data-controller="maps" class="container container-location d-flex justify-content-center text-center align-items-center" id="<%= dom_id location %>">
  <%= form_with(model: location) do |f| %>

    <div id="searchBoxContainer" class="m-3">
      <%= f.label :address, style: "display: block" %>
      <%= f.text_field :address, id: "searchBox", autocomplete: "off", class: "rounded" %>
    </div>

    <div>
      <%= f.text_field :latitude, id: "place_latitude", data: {"maps-target": "latitude"}, style: "display: none" %>
    </div>

    <div>
      <%= f.text_field :longitude, id: "place_longitude", data: {"maps-target": "longitude"}, style: "display: none"  %>
    </div> 
    <div class="container-maps rounded">
      <div data-maps-target="myMap" style="width:50vw; height:50vh;" ></div>
    </div>
  <% end %>
</div>


