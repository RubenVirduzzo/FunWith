<section class="container d-flex flex-column justify-content-around align-items-center col-12 p-2">
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-div form-new p-5 d-flex flex-column justify-content-around align-items-center text-center rounded">
  
    <h2 class="pl-1 pb-2">Edit</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="field form-group">
        <%= f.text_field :fullname, autofocus: true, autocomplete: "fullname", class: "form-group text-center border-0 border-0", placeholder: "Fullname" %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-group text-center rounded border-0 rounded border-0" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field d-block">
        <%= f.text_area :description, placeholder: "Description" %>
      </div>

      <div class="field d-flex flex-column align-items-center image-edit text-center">
        <%= image_tag resource.image, width: "50", class:"img" %>
        <%= f.file_field :image, autocomplete: "image" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "btn bg-logo text-white mb-2" %>
      </div>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn bg-logo text-white" %></p>

    <%= link_to "Back", :back, class: "txt" %>

  </div>
</section>
