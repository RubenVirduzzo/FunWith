<section class="container d-flex flex-column justify-content-around align-items-center p-2">
  <div class="form-div p-5 d-flex flex-column justify-content-around align-items-center text-center rounded">
  
    <h2 class="pl-1 pb-2">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.text_field :fullname, autofocus: true, autocomplete: "fullname", class: "form-group text-center border-0 border-0", placeholder: "Fullname" %>
      </div>

      <div class="field form-group">
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-group text-center border-0", placeholder: "Username" %>
      </div>

      <div class="field form-group">
        <%= f.label :date_of_birth %><br />
        <%= f.date_field :date_of_birth, autofocus: true, autocomplete: "date_of_birth", class: "form-group text-center border-0" %>
      </div>
      
      <div class="field d-block">
        <%= f.label :description %><br/>
        <%= f.text_area :description, autocomplete: "image" %>
      </div>

      <div class="field form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-group text-center border-0", placeholder: "E-mail" %>
      </div>

      <div class="field form-group">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br>
        
        <%= f.password_field :password, autocomplete: "new-password", class: "form-group text-center border-0 mt-2", placeholder: "Password"  %>
      </div>

      <div class="field form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-group text-center border-0", placeholder: "Repeat password" %>
      </div>

      <div class="field form-group">
        <%= f.file_field :image %>
      </div>

      <div class="actions m-2">
        <%= f.submit "Sign up", data: {turbo: false}, class: "btn bg-logo text-white" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
