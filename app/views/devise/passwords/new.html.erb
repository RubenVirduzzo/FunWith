<section class="container p-3 d-flex flex-column justify-content-around align-items-center w-25" >
  <div class="form-div p-5 d-flex flex-column justify-content-around align-items-center text-center rounded">
  
    <h2 class="pl-1 pb-2">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-group text-center rounded border-0 m-3 col-8", placeholder: "E-mail" %>
      </div>

      <div class="actions m-2 mb-4">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary " %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
