<section class="container d-flex flex-column justify-content-around align-items-center p-2">
  <div class="form-div p-5 d-flex flex-column justify-content-around align-items-center text-center rounded">
  
    <h2>Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "New password" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions m-4">
        <%= f.submit "Change my password", class: "btn bg-logo text-white" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</section>
