<section class="body d-flex w-100">
  <div class="nav-home bg-secondary text-center text-white w-25 h-100 p-4 ">
    <ul>
    <li class="btn btn-secondary nav-link border m-1 "><a class="text-white" href="/show_events">Events</a></li>
    <li class="btn btn-secondary nav-link border m-1 rounded"><a class="text-white" href="/show_users">Users</a></li>
    </ul>
  </div>
  <div class="d-flex flex-column h-100 w-100 align-items-center">
    <% if @users %>
      <% @users.each do |user| %>
        <div class="bg-logo text-center text-white w-25 mt-5 p-4 rounded">
          <h3> <%= user.fullname %> </h3>
          <p> <%= user.username %> </p>
          <h5> <%= user.email %> </h5>
          <a class="btn btn-secondary" href="/users/<%= user.id %>">View profile</a>
        </div>
      <% end %>
    <% end %>
  </div>
</section>
