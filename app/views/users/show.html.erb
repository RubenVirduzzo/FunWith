<div class="d-flex flex-column justify-content-center m-5 align-items-center">
  <div>
    <div class="d-flex justify-content-start">
      <h3 class="mr-2">Name:</h3> 
      <h3 class="txt"><%= @user.fullname.camelcase %></h3>
    </div>
    <div class="d-flex justify-content-start">
      <h3 class="mr-2">Username:</h3>
      <h3 class="txt"><%= @user.username.camelcase %></h3>
    </div>
    <div class="d-flex justify-content-start">
      <h3 class="mr-2">Email:</h3>
      <h3 class="txt"><%= @user.email %></h3>
    </div>
    <div class="d-flex justify-content-start">
      <h3 class="mr-2">Born on:</h3>
      <h3 class="txt"><%= @user.date_of_birth %></h3>
    </div>
    <div class="d-flex justify-content-start">
      <h3 class="mr-2">Profile created at:</h3>
      <h3 class="txt"><%= @user.created_at %></h3>
    </div>
    <% if @user.created_at != @user.updated_at %>
      <div class="d-flex justify-content-start">
        <h3 class="mr-2">Profile updated at:</h3>
        <h3 class="txt"><%= @user.updated_at %></h3>
      </div>
    <% end %>
    <% if user_session && current_user.role == "admin" %>
      <div class="d-flex justify-content-start">
          <h3 class="mr-2">Role:</h3>
          <h3 class="txt"><%= @user.role %></h3>
      </div>
    <% end %>
    <% if user_session && current_user.id == @user.id %>
      <a href="/users/edit">Change password</a>
    <% end %>
    <% if user_session && @user.role != "banned" && current_user.id != @user.id && current_user.role == "admin" %>
      <button class="btn btn-danger"><a href="/users/ban/<%=@user.id%>" class="text-white"> Ban user</a></button>
    <% end %>
    <% if user_session && @user.role == "banned" && current_user.id != @user.id && current_user.role == "admin" %>
      <button class="btn bg-logo"><a href="/users/unban/<%=@user.id%>" class="text-white"> Unban user</a></button>
    <% end %>
  </div>
</div>